---
import Button from "@components/button";
import MainForm from "@components/form";
import Layout from "@layouts/Layout.astro";
import { navCollapseId } from "@components/navbar";

import Cards from "@components/serviceCards.astro";
---

<Layout>
    <div class="bg-black-primary py-28 pb-32 px-global md:pb-36 lg:pb-40">
        <section class="container relative m-auto text-center sm:text-left">
            <div
                class="absolute -top-4 left-12 z-0 hidden h-[17rem] w-96 rotate-[-16deg] border-4 border-gradient sm:block sm:w-[26rem] md:-top-6 md:h-80 md:w-[28rem] lg:-top-7 lg:h-[23rem] lg:w-[32rem]"
                style={{
                    clipPath: "polygon(41.74% 0%, 100% 0%, 100% 100%, 0% 100%, 0% 75.62%, 42.75% 72.18%);",
                }}>
            </div>
            <h1 class="text-gradient relative z-10 font-gilroy text-5xl font-black sm:text-6xl md:text-7xl lg:text-8xl">
                Looking for <br />
                Something?
            </h1>
            <p class="mt-3 text-xl sm:text-2xl">Decals? Jacket Pins? T-Shirts? Posters?</p>
            <Button href="#form" class="btn-bg-animate mt-5 bg-transparent text-white border-gradient">
                <span class="relative">GET STARTED</span>
            </Button>
        </section>
    </div>
    <div id={navCollapseId} class="invisible"></div>
    <div class="bg-black-secondary py-20 px-global">
        <section class="container m-auto space-y-4 text-center sm:px-0">
            <h4 class="text-3xl">Our Services</h4>
            <p class="pb-6">We are making top quality decals, jacket pins, t-shirts, and posters</p>
            <Cards />
        </section>
    </div>
    <div class="bg-black-tertiary py-6 px-global">
        <section class="container m-auto">
            <MainForm client:only="solid" />
        </section>
    </div>
</Layout>
