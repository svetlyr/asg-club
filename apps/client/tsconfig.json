{
    "extends": ["astro/tsconfigs/strictest", "../../tsconfig.json"],

    "files": ["../../reset.d.ts"],
    "exclude": ["**/dist", "**/node_modules", ".git", ".github", ".vscode"],
    "include": ["src", "../cms/src", "**/*.d.ts", ".astro/types.d.ts", "./*.config.ts"],

    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "preserve",
        "jsxImportSource": "solid-js",

        // * Handled by eslint
        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "noUncheckedIndexedAccess": false,

        "baseUrl": ".",
        "paths": {
            "@api": ["src/api/index.ts"],
            "@utils": ["src/utils/index.ts"],

            "@api/*": ["src/api/*"],
            "@cms/*": ["../cms/src/*"],
            "@hooks/*": ["src/hooks/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
            "@stores/*": ["src/stores/*"],
            "@styles/*": ["src/styles/*"],
            "@layouts/*": ["src/layouts/*"],
            "@schemas/*": ["src/schemas/*"],
            "@components/*": ["src/components/*"]
        },

        // "noEmit": false,
        // "composite": true,
        "incremental": true,
        "skipLibCheck": false,
        "removeComments": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "types": ["astro/client", "unplugin-icons/types/solid"]
}
