---
import "@fontsource/roboto";
import "@fontsource/poppins";
import "@fontsource-variable/roboto-slab";

import "@styles/global.css";

import Navbar from "@components/navbar";

const navCollapseId = "navCollapseTarget";
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="darkreader-lock" />
        <meta name="generator" content={Astro.generator} />
        <meta name="viewport" content="width=device-width" />
        <!-- TODO: change when domain name is ready -->
        <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.ico`} />
        <title>ASG Club</title>
    </head>

    <svg width="0" height="0" style={{ position: "absolute", visibility: "hidden" }}>
        <defs>
            <linearGradient id="main-gradient" gradientTransform="rotate(45)">
                <stop offset="15%" stop-color="rgb(224, 4, 11)"></stop>
                <stop offset="65%" stop-color="rgb(252, 81, 48)"></stop>
            </linearGradient>
        </defs>
    </svg>

    <body class="bg-gray-900">
        <Navbar
            client:load
            class="px-6 sm:px-8 md:px-10 lg:px-16"
            path={Astro.url.pathname}
            navCollapseId={navCollapseId}
        />
        <slot />
    </body>


</html>
