---
type Props = {
    class?: string;
    rawSvg: string;
};

const { rawSvg, class: className = "" }: Props = Astro.props;

const svg = rawSvg
    .replace(/<svg\b/, `<svg class="${className}"`)
    .replace(/fill="currentColor"/g, 'fill="url(#main-gradient)"');
---

{/* eslint-disable-next-line astro/no-set-html-directive */}
<Fragment set:html={svg} />
