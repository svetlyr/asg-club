{
    // * This is a bad practice, whole monorepo is considered as a single project
    // TODO: specify include/exclude for each app
    "exclude": ["**/dist", "**/node_modules", "**/assets", ".git", ".vscode"],
    "include": ["**/.astro/types.d.ts", "**/*.mjs", "**/*.ts", "**/src"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "Preserve",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "allowJs": false,
        "verbatimModuleSyntax": true,
        "allowImportingTsExtensions": false,

        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },

    "files": [],
    "references": [{ "path": "apps/client" }, { "path": "apps/server" }, { "path": "apps/cms" }]
}
